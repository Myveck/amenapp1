{% extends 'base.html.twig' %}

{% block title %}Examinations index{% endblock %}

{% block body %}

  <div class="wrapper">
      <div class="sidebar">
            <div class="top"><a href="{{ path("app_main") }}" data-section="section1">Acceuil</a></div>
            <div class="sidebar-menu">
                <a href="{{ path("app_examinations_index") }}" data-section="section1"  class="active">Examinations</a>
                <a href="{{ path("app_evaluations_index") }}" data-section="section1">Type Examinations</a>
                <a href="{{ path("app_classes_bulletins") }}" data-section="section2">bulletins</a>
            </div>
      </div>
    <div class="center">
      <h1 class="my-4">Créer une examination pour la classe de <strong>{{classe.nom}}</strong></h1>
      <p class="text-center">Vous créerez une examination pour tous les types(d1, d2, mi...)</p>
      <form action="{{ path('app_examinations_create') }}" method="get" id="matiere-classe-form">
        <div class="hidden mb-2">
          <label for="classe">Classe</label>
          <select name="classe" id="classe" class="form-select">
              <option value="{{ classe.id }}">{{ classe.nom }}</option>
          </select>
        </div>
        <div class="mb-2 row">
          <label for="matiere"><strong>Matière</strong></label>
          {# <select name="matiere" id="matiere" class="form-select">
            {% for matiere in matieres %}
              <option value="{{ matiere.id }}">{{ matiere.nom }}</option>
            {% endfor %}
          </select> #}
            {% for matiere in matieres %}
              <div class="mx-3 mt-2 form-check col-3">
                <input class="form-check-input" type="checkbox" value="{{matiere.id}}" id="{{matiere.id}}" name="matieres[]">
                <label class="form-check-label" for="{{matiere.id}}">
                  {{matiere.nom}}
                </label>
              </div>
            {% endfor %}
          
        </div>
        
        <div class="mb-2">
          <label for="trimestre" class="mb-2"><strong>Trimestre de l'évaluation</strong></label>
          <select name="trimestre" id="trimestre" class="form-select for-control mb-4">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primaire mt-2">Créer</button>
      </form>
    </div>
  </div>

  <script>
  </script>

{% endblock %}