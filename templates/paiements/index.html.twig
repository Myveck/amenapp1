{% extends 'base.html.twig' %}

{% block title %}Paiements index{% endblock %}

{% block body %}

  <div class="wrapper">
      <div class="sidebar">
            <div class="sidebar-menu">
            <a href="{{ path("app_main") }}" data-section="section1">Acceuil</a>
              <a href="{{ path("app_main_finances") }}" data-section="section1">Dashboard</a>
            <a href="{{ path("app_paiements_index") }}" data-section="section1" class="active">Liste des paiements</a>
            <a href="{{ path("app_paiements_nouveau") }}" data-section="section2">Nouveau paiement</a>
            </div>
        </div>
        <div class="center">
            <h1>Paiements index</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Montant</th>
                        <th>Type</th>
                        <th>Created_at</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for paiement in paiements %}
                    <tr>
                        <td>{{ paiement.id }}</td>
                        <td>{{ paiement.montant }}</td>
                        <td>{{ paiement.type }}</td>
                        <td>{{ paiement.createdAt ? paiement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_paiements_show', {'id': paiement.id}) }}">show</a>
                            <a href="{{ path('app_paiements_edit', {'id': paiement.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_paiements_new') }}">Create new</a>
        </div>
  </div>
{% endblock %}
