{% block title %}Enseignants index{% endblock %}

{% block body %}
  <div class="wrapper">
      <div class="sidebar">
        <div class="sidebar-menu">
          <a href="{{ path("app_main") }}" data-section="section1">Acceuil</a>
          <a href="{{ path("app_eleves_index") }}" data-section="section1" class="active">Liste des enseignants</a>
          <a href="{{ path("app_eleves_new") }}" data-section="section2">Ajouter un enseignant</a>
