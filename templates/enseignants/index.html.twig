{% extends 'base.html.twig' %}

{% block title %}Enseignants index{% endblock %}

{% block body %}
  <div class="wrapper">
      <div class="sidebar">
        <div class="top"><a href="{{ path("app_main") }}" data-section="section1">Acceuil</a></div>

        <div class="sidebar-menu">
            <a href="{{ path("app_main_ecole") }}" data-section="section1">Dashboard</a>
            <a href="{{ path("app_eleves_index") }}" data-section="section1" >Elèves</a>
            <a href="{{ path("app_classes_index") }}" data-section="section2">Classes</a>
            <a href="{{ path("app_matieres_index") }}" data-section="section2">Cours</a>
            <a href="{{ path("app_enseignants_index") }}" data-section="section2" class="active">Professeurs</a>
        </div>
      </div>
        <div class="center">
            <h1>Liste des enseignants</h1>

            <div class="right"><a href="{{ path('app_enseignants_new') }}" class="btn btn-primaire mb-4">Ajouter un professeur</a></div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for enseignant in enseignants %}
                    <tr>
                        <td>{{ enseignant.id }}</td>
                        <td>{{ enseignant.nom }}</td>
                        <td>{{ enseignant.prenom }}</td>
                        <td>{{ enseignant.telephone }}</td>
                        <td>
                            <a href="{{ path('app_enseignants_show', {'id': enseignant.id}) }}">show</a>
                            <a href="{{ path('app_enseignants_edit', {'id': enseignant.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun enseignant n'a été trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
  </div>
{% endblock %}
