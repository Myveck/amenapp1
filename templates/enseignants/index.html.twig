        </div>
      </div>
        <div class="center">
            <h1>Enseignants index</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Created_at</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for enseignant in enseignants %}
                    <tr>
                        <td>{{ enseignant.id }}</td>
                        <td>{{ enseignant.nom }}</td>
                        <td>{{ enseignant.prenom }}</td>
                        <td>{{ enseignant.telephone }}</td>
                        <td>{{ enseignant.createdAt ? enseignant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_enseignants_show', {'id': enseignant.id}) }}">show</a>
                            <a href="{{ path('app_enseignants_edit', {'id': enseignant.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_enseignants_new') }}">Create new</a>
        </div>
  </div>
{% endblock %}
