{% extends 'base.html.twig' %}

{% block title %}Evaluations index{% endblock %}

{% block body %}

<div class="wrapper">
    <div class="sidebar">
        <div class="top"><a href="{{ path("app_main") }}" data-section="section1">Acceuil</a></div>
        <div class="sidebar-menu">
            <a href="{{ path("app_examinations_index") }}" data-section="section1"  >Examinations</a>
            <a href="{{ path("app_evaluations_index") }}" data-section="section1" class="active">Type Examinations</a>
            <a href="{{ path("app_classes_bulletins") }}" data-section="section2">bulletins</a>
        </div>
    </div>
    
    <div class="center">
        <h1>Types d'évaluations</h1>
                <div class="right"><a href="{{ path('app_evaluations_new') }}" class="btn btn-primaire mb-4">Créer une évaluation</a></div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for evaluation in evaluations %}
                <tr>
                    <td>{{ evaluation.nom }}</td>
                    <td>
                        <a href="{{ path('app_evaluations_edit', {'id': evaluation.id}) }}" class="btn btn-primaire">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune évaluation n'a été trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
