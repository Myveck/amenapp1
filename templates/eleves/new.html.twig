                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                <i class="fas fa-{% if label == 'success' %}check-circle{% elseif label == 'danger' %}exclamation-circle{% else %}info-circle{% endif %}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(formEleve, {'attr': {'novalidate': 'novalidate', 'id': 'eleveForm'}}) }}
    
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <!-- Student Information Card -->
            <div class="info-card">
                <div class="card-header-custom">
                    <div class="header-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="header-text">
                        <h5>Informations de l'Élève</h5>
                        <p>Veuillez remplir tous les champs obligatoires <span class="text-danger">*</span></p>
                    </div>
                </div>
                
                <div class="card-body-custom">
                    <div class="row g-4">
                        <!-- Nom -->
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <div class="label-with-required">
                                    {{ form_label(formEleve.nom, null, {'label_attr': {'class': 'form-label-custom'}}) }}
                                    <span class="required-mark">*</span>
                                </div>
                                {{ form_widget(formEleve.nom, {
                                    'attr': {
                                        'class': 'form-control-custom',
                                        'placeholder': 'Entrez le nom de famille'
                                    }
                                }) }}
                                {{ form_errors(formEleve.nom) }}
                            </div>
                        </div>

                        <!-- Prénom -->
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <div class="label-with-required">
                                    {{ form_label(formEleve.prenom, null, {'label_attr': {'class': 'form-label-custom'}}) }}
                                    <span class="required-mark">*</span>
                                </div>
                                {{ form_widget(formEleve.prenom, {
                                    'attr': {
                                        'class': 'form-control-custom',
                                        'placeholder': 'Entrez le(s) prénom(s)'
                                    }
                                }) }}
                                {{ form_errors(formEleve.prenom) }}
                            </div>
                        </div>

                        <!-- Date de Naissance -->
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <div class="label-with-required">
                                    {{ form_label(formEleve.date_naissance, null, {'label_attr': {'class': 'form-label-custom'}}) }}
                                    <span class="required-mark">*</span>
                                </div>
                                <div class="input-with-icon">
                                    <i class="fas fa-calendar input-icon"></i>
                                    {{ form_widget(formEleve.date_naissance, {
                                        'attr': {
                                            'class': 'form-control-custom',
                                            'type': 'date'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(formEleve.date_naissance) }}
                            </div>
                        </div>
                        
                        <!-- Sexe -->
                        <div class="col-md-6">
                            <div class="form-group-custom">
                                <div class="label-with-required">
                                    {{ form_label(formEleve.sexe, null, {'label_attr': {'class': 'form-label-custom'}}) }}
                                    <span class="required-mark">*</span>
                                </div>
                                <div class="input-with-icon">
                                    <i class="fas fa-venus-mars input-icon"></i>
                                    {{ form_widget(formEleve.sexe, {
                                        'attr': {
                                            'class': 'form-control-custom form-select-custom'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(formEleve.sexe) }}
                            </div>
                        </div>

                        <!-- Dynamic Fields -->
                                <div class="form-group-custom">
    <label for="classe" class="form-label-custom">Classe <span class="required-mark">*</span></label>
    <select name="classe" id="classe" class="form-control-custom form-select-custom" required>
        <option value="">-- Sélectionnez une classe --</option>
        {% for classe in classes %}
            <option value="{{ classe.id }}">{{ classe.nom }}</option>
