<form
  method="post"
  action="{{ path('app_eleves_delete', { id: elefe.id }) }}"
  onsubmit="return confirm('Voulez-vous vraimen enlever {{ elefe.nom }} {{
    elefe.prenom
  }} de la liste des élèves ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ elefe.id) }}"
  />
  <button class="btn btn-danger">Enlever l'élève</button>
</form>
