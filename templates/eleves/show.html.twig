{% extends 'base.html.twig' %} {% block title %}Eleves{% endblock %} {% block
body %}

  <div class="wrapper">
      <div class="sidebar">
        
  <div class="sidebar">
        <div class="top"><a href="{{ path("app_main") }}" data-section="section1">Acceuil</a></div>

        <div class="sidebar-menu">
            <a href="{{ path("app_main_ecole") }}" data-section="section1">Dashboard</a>
            <a href="{{ path("app_eleves_index") }}" data-section="section1">Elèves</a>
            <a href="{{ path("app_classes_index") }}" data-section="section2">Classes</a>
            <a href="{{ path("app_matieres_index") }}" data-section="section2">Cours</a>
            <a href="{{ path("app_enseignants_index") }}" data-section="section2">Professeurs</a>
        </div>
  </div>
      </div>
      <div class="center">
      <h1>{{ elefe.nom }} {{ elefe.prenom }}</h1>
      <table class="table">
        <tbody>
          <tr>
            <th>Nom</th>
            <td>{{ elefe.nom }}</td>
          </tr>
          <tr>
            <th>Prenom</th>
            <td>{{ elefe.prenom }}</td>
          </tr>
          <tr>
            <th>Date_naissance</th>
            <td>
              {{ elefe.dateNaissance ? elefe.dateNaissance|date('Y-m-d') : '' }}
            </td>
          </tr>
          <tr>
            <th>Sexe</th>
            <td>
              {% if elefe.sexe == "m" %}Masculin
              {% else %}
                Feminin
              {% endif %}
            </td>
          </tr>
          <tr>
            <th>Classe</th>
            <td>
              {{ elefe.classe.nom }}
            </td>
          </tr>
        </tbody>
      </table>
      <div class="small-wrapper">
        <p>
          <a
            href="{{ path('app_eleves_edit', { id: elefe.id }) }}"
            class="btn btn-primaire mb-4 mt-2"
          >
            modifier
          </a>
        </p>
        <p>
          <a href="{{ path('app_eleves_index') }}" class="btn btn-secondaire">
           Liste des élèves
          </a>
        </p>
      </div>
      {{ include("eleves/_delete_form.html.twig") }}
      </div>
  </div>
{% endblock %}
